<!DOCTYPE html>
<html lang="en" class="light">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Yadro - Coupons</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="icon" href="/images/logo.png" type="image/x-icon">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <script src="/js/toggle.js"></script>
  <link rel="stylesheet" href="/css/coupons.css">
  <link rel="stylesheet" href="/css/products.css">
</head>

<body class="bg-gray-100 font-sans transition-all duration-300 dark:bg-gray-800">

  <div class="flex">
    <!-- Sidebar -->
    <%- include('../layouts/admin-sidebar.ejs') %>

    <!-- Main Content -->
    <div class="flex-1 ml-64 p-6">
      <div class="flex items-center justify-between mb-6">
        <h1 class="text-3xl font-bold text-gray-800 dark:text-white fade-in-up">Coupons</h1>
        <div class="flex items-center space-x-4">
          <div class="theme-toggle" id="themeToggle"></div>
          <a href="/admin/add-coupon" class="add-coupon-btn px-4 py-2 bg-green-600 text-white rounded-lg relative overflow-hidden button">
            <span class="relative z-10">Add Coupon</span>
          </a>
        </div>
      </div>

      <!-- Search and Filter -->
      <form action="/admin/customers" method="GET" class="mb-8 fade-in-up" style="animation-delay: 0.2s;">
        <div class="search-container flex items-center justify-between">
          <i class="fas fa-search search-icon ml-4"></i>
          <input type="text" name="search" placeholder="Search Coupons..." class="search-input" />
          <select name="status" class="search-select mr-5">
            <option value="">All Status</option>
            <option value="active">Active</option>
            <option value="blocked">Blocked</option>
          </select>
          <button type="submit" class="search-button">
            Search
          </button>
        </div>
      </form>

      <!-- Coupons Table -->
      <div class="overflow-x-auto fade-in-up" style="animation-delay: 0.4s;">
        <table class="min-w-full bg-white dark:bg-gray-700 border border-gray-200 dark:border-gray-600 shadow-md rounded-lg overflow-hidden">
          <thead>
            <tr class="bg-gray-50 dark:bg-gray-600 text-gray-600 dark:text-gray-200 uppercase text-sm leading-normal">
              <th class="py-3 px-6 text-left">Sl No</th>
              <th class="py-3 px-6 text-left">Coupon Code</th>
              <th class="py-3 px-6 text-left">Discount</th>
              <th class="py-3 px-6 text-left">Min Amount</th>
              <th class="py-3 px-6 text-left">Validity</th>
              <th class="py-3 px-6 text-left">Created</th>
              <th class="py-3 px-6 text-left">Status</th>
              <th class="py-3 px-6 text-left">Action</th>
            </tr>
          </thead>
          <tbody class="text-gray-600 dark:text-gray-200">
            <% coupons.forEach( (coupon , index) => { %>
            <tr class="table-row border-b border-gray-200 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
              <td class="py-3 px-6"><%= index + 1 %></td>
              <td class="py-3 px-6"><%= coupon.code %></td>
              <td class="py-3 px-6"><%= coupon.offer %> %</td>
              <td class="py-3 px-6">â‚¹ <%= coupon.minimumPrice %></td>
              <td class="py-3 px-6"><%= coupon.expiredOn %></td>
              <td class="py-3 px-6"><%= coupon.createdOn %></td>
              <% if (coupon.isList) { %>
              <td class="py-3 px-6"><span class="bg-green-200 text-green-600 py-1 px-3 rounded-full text-xs">Active</span></td>
              <% } else { %>
              <td class="py-3 px-6"><span class="bg-red-200 text-red-600 py-1 px-3 rounded-full text-xs">InActive</span></td>
              <% } %>
              <td class="py-3 px-6">
                <div class="flex space-x-3">
                  <a href="/admin/editProduct/" class="relative group action-icon edit-icon" title="Edit">
                    <i class="fas fa-edit"></i>
                    <div class="tooltip hidden absolute bottom-full mb-2 w-max text-sm bg-gray-800 text-white p-2 rounded-lg opacity-0 transition-opacity duration-300 group-hover:opacity-100 group-hover:block">
                      Edit
                      <div class="tooltip-arrow"></div>
                    </div>
                  </a>
                  <a href="/admin/viewProduct/" class="relative group action-icon view-icon" title="View">
                    <i class="fas fa-eye"></i>
                    <div class="tooltip hidden absolute bottom-full mb-2 w-max text-sm bg-gray-800 text-white p-2 rounded-lg opacity-0 transition-opacity duration-300 group-hover:opacity-100 group-hover:block">
                      View
                      <div class="tooltip-arrow"></div>
                    </div>
                  </a>
                  <a href="/admin/deleteProduct/" class="relative group action-icon delete-icon" title="Delete">
                    <i class="fas fa-trash"></i>
                    <!-- Tooltip -->
                    <div class="tooltip hidden absolute bottom-full mb-2 w-max text-sm bg-gray-800 text-white p-2 rounded-lg opacity-0 transition-opacity duration-300 group-hover:opacity-100 group-hover:block">
                      Delete
                      <div class="tooltip-arrow"></div>
                    </div>
                  </a>
                </div>
              </td>
            </tr>
            <% }) %>
            <!-- Add more rows as needed -->
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <div class="flex justify-between items-center mt-4 fade-in-up" style="animation-delay: 0.6s;">
        <span class="text-gray-600 dark:text-gray-300">Showing 1-4 of 4 coupons</span>
        <div class="flex space-x-2">
          <button class="pagination-button px-3 py-1 bg-gray-200 dark:bg-gray-600 text-gray-600 dark:text-gray-200 rounded-md hover:bg-gray-300 dark:hover:bg-gray-500 transition-colors duration-300">Previous</button>
          <button class="pagination-button px-3 py-1 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition-colors duration-300">1</button>
          <button class="pagination-button px-3 py-1 bg-gray-200 dark:bg-gray-600 text-gray-600 dark:text-gray-200 rounded-md hover:bg-gray-300 dark:hover:bg-gray-500 transition-colors duration-300">2</button>
          <button class="pagination-button px-3 py-1 bg-gray-200 dark:bg-gray-600 text-gray-600 dark:text-gray-200 rounded-md hover:bg-gray-300 dark:hover:bg-gray-500 transition-colors duration-300">3</button>
          <button class="pagination-button px-3 py-1 bg-gray-200 dark:bg-gray-600 text-gray-600 dark:text-gray-200 rounded-md hover:bg-gray-300 dark:hover:bg-gray-500 transition-colors duration-300">Next</button>
        </div>
      </div>
    </div>
  </div>

  <script src="/js/coupons.js"></script>
</body>

</html>