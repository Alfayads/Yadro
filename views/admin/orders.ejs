<!DOCTYPE html>
<html lang="en" class="light">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Yadro - Orders</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <script src="/js/toggle.js"></script>
  <link rel="icon" href="/images/logo.png" type="image/x-icon">
  <link rel="stylesheet" href="/css/orders.css">
</head>

<body class="bg-gray-100 font-sans transition-all duration-300 dark:bg-gray-800">
  <div class="flex">
    <!-- Sidebar -->
    <%- include('../layouts/admin-sidebar.ejs') %>

    <!-- Main Content -->
    <div class="flex-1 p-8 ml-64">
      <div class="flex justify-between items-center mb-8">
        <h2 class="text-2xl font-bold text-gray-800 dark:text-white">Orders</h2>
        <div class="theme-toggle" id="themeToggle"></div>
      </div>

      <!-- Order Statistics -->
      <div class="grid grid-cols-4 gap-4 mb-8 fade-in-up">
        <div class="bg-white dark:bg-gray-700 p-4 rounded-lg shadow">
          <h3 class="text-lg font-semibold text-gray-600 dark:text-gray-300">Pending Payment</h3>
          <p class="text-3xl font-bold text-blue-500">56</p>
        </div>
        <div class="bg-white dark:bg-gray-700 p-4 rounded-lg shadow">
          <h3 class="text-lg font-semibold text-gray-600 dark:text-gray-300">Completed</h3>
          <p class="text-3xl font-bold text-green-500">4873</p>
        </div>
        <div class="bg-white dark:bg-gray-700 p-4 rounded-lg shadow">
          <h3 class="text-lg font-semibold text-gray-600 dark:text-gray-300">Refunded</h3>
          <p class="text-3xl font-bold text-yellow-500">231</p>
        </div>
        <div class="bg-white dark:bg-gray-700 p-4 rounded-lg shadow">
          <h3 class="text-lg font-semibold text-gray-600 dark:text-gray-300">Failed</h3>
          <p class="text-3xl font-bold text-red-500">23</p>
        </div>
      </div>

      <!-- Order Filters -->
      <div class="flex mb-4 fade-in-up" style="animation-delay: 0.2s;">
        <button class="mr-2 px-4 py-2 bg-blue-500 text-white rounded">All Status</button>
        <button class="mr-2 px-4 py-2 bg-gray-200 text-gray-700 rounded">Processing</button>
        <button class="mr-2 px-4 py-2 bg-gray-200 text-gray-700 rounded">Shipped</button>
        <button class="mr-2 px-4 py-2 bg-gray-200 text-gray-700 rounded">Delivered</button>
        <button class="mr-2 px-4 py-2 bg-gray-200 text-gray-700 rounded">Cancelled</button>
      </div>

      <!-- Orders Table -->
      <div class="bg-white dark:bg-gray-700 rounded-lg shadow overflow-hidden fade-in-up" style="animation-delay: 0.4s;">
        <table class="w-full">
          <thead>
            <tr class="bg-gray-50 dark:bg-gray-600 text-gray-600 dark:text-gray-200 uppercase text-sm leading-normal">
              <th class="py-3 px-6 text-left">Product</th>
              <th class="py-3 px-6 text-left">Customer</th>
              <th class="py-3 px-6 text-left">Quantity</th>
              <th class="py-3 px-6 text-left">Total Price</th>
              <th class="py-3 px-6 text-left">Order Date</th>
              <th class="py-3 px-6 text-left">Payment</th>
              <th class="py-3 px-6 text-left">Status</th>
              <th class="py-3 px-6 text-left">Action</th>
            </tr>
          </thead>
          <tbody class="text-gray-600 dark:text-gray-200">
            <tr class="table-row border-b border-gray-200 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
              <td class="py-3 px-6">Product Name</td>
              <td class="py-3 px-6">Username</td>
              <td class="py-3 px-6">4</td>
              <td class="py-3 px-6">12323</td>
              <td class="py-3 px-6">24 Jun 2023</td>
              <td class="py-3 px-6">Cash on delivery</td>
              <td class="py-3 px-6"><span class="bg-yellow-100 text-yellow-800 py-1 px-3 rounded-full text-xs">In Progress</span></td>
              <td class="py-3 px-6">
                <button class="text-blue-500 hover:text-blue-700">Edit</button>
              </td>
            </tr>
            <!-- Add more rows as needed -->
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <div class="flex justify-center mt-4 fade-in-up" style="animation-delay: 0.6s;">
        <button class="mx-1 px-3 py-1 bg-gray-200 text-gray-700 rounded">1</button>
        <button class="mx-1 px-3 py-1 bg-gray-200 text-gray-700 rounded">2</button>
        <button class="mx-1 px-3 py-1 bg-gray-200 text-gray-700 rounded">3</button>
        <button class="mx-1 px-3 py-1 bg-gray-200 text-gray-700 rounded"><i class="fas fa-chevron-right"></i></button>
      </div>
    </div>
  </div>

  <script src="/js/orders.js"></script>
</body>

</html>