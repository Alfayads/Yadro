<!DOCTYPE html>
<html lang="en" class="light">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Yadro - Products</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <script src="/js/toggle.js"></script>
  <link rel="stylesheet" href="/css/products.css">
</head>

<body class="bg-gray-100 font-sans transition-all duration-300 dark:bg-gray-800">

  <div class="flex">
    <!-- Sidebar (assumed to be included) -->
    <%- include('../layouts/admin-sidebar.ejs') %>

    <!-- Main Content -->
    <div class="flex-1 ml-64 p-6">


      <% if (success_msg.length > 0) { %>
      <div id="successMessage" class="message bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-6" role="alert">
        <strong class="font-bold">Success!</strong>
        <span class="block sm:inline"><%= success_msg %></span>
      </div>
      <% } %>

      <% if (error_msg.length > 0) { %>
      <div id="errorMessage" class="message bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-6" role="alert">
        <strong class="font-bold">Error!</strong>
        <span class="block sm:inline"><%= error_msg %></span>
      </div>
      <% } %>


      <div class="flex items-center justify-between mb-6">
        <h1 class="text-3xl font-bold text-gray-800 dark:text-white fade-in-up">All Products</h1>
        <div class="flex items-center space-x-4">
          <div class="theme-toggle" id="themeToggle"></div>
          <a href="/admin/add-product" class="add-product-btn px-4 py-2 bg-green-600 text-white rounded-lg relative overflow-hidden button">
            <span class="relative z-10">Add Product</span>
          </a>
        </div>
      </div>

      <!-- Search and Filter -->
      <form action="/admin/product" method="GET" class="mb-8 fade-in-up" style="animation-delay: 0.2s;">
        <div class="search-container flex items-center justify-between">
          <i class="fas fa-search search-icon ml-4"></i>
          <input type="text" name="search" placeholder="Search customers..." class="search-input" />
          <select name="status" class="search-select mr-5">
            <option value="">All Status</option>
            <option value="wired">Wired</option>
            <option value="wireless">Wireless</option>
            <option value="buds">Buds</option>
            <option value="Speaker">Speaker</option>
          </select>
          <button type="submit" class="search-button">
            Search
          </button>
        </div>
      </form>

      <!-- Products Table -->
      <div class="overflow-x-auto fade-in-up" style="animation-delay: 0.4s;">
        <table class="min-w-full bg-white dark:bg-gray-700 border border-gray-200 dark:border-gray-600 shadow-md rounded-lg overflow-hidden">
          <thead>
            <tr class="bg-gray-50 dark:bg-gray-600 text-gray-600 dark:text-gray-200 uppercase text-sm leading-normal">
              <th class="py-3 px-6 text-left">Product Image</th>
              <th class="py-3 px-6 text-left">Product Name</th>
              <th class="py-3 px-6 text-left">Product ID</th>
              <th class="py-3 px-6 text-left">Category</th>
              <th class="py-3 px-6 text-left">Stock</th>
              <th class="py-3 px-6 text-left">Product Price</th>
              <th class="py-3 px-6 text-left">Sale Price</th>
              <th class="py-3 px-6 text-left">Action</th>
            </tr>
          </thead>
          <tbody class="text-gray-600 dark:text-gray-200">
            <% data.forEach( product => { %>
            <tr class="table-row border-b border-gray-200 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
              <td class="py-3 px-6"><img src="/api/placeholder/80/80" alt="Product Image" class="h-16 w-16 object-cover rounded-lg" /></td>
              <td class="py-3 px-6"><%= product.name %></td>
              <td class="py-3 px-6"><%= product._id %></td>
              <td class="py-3 px-6"><%= product.category %></td>
              <td class="py-3 px-6"><%= product.quantity %></td>
              <td class="py-3 px-6">₹<%= product.regularPrice %></td>
              <td class="py-3 px-6">₹<%= product.salePrice %></td>
              <td class="py-3 px-6">
                <div class="flex space-x-3">
                  <a href="/admin/editProduct/<%= product._id %>" class="relative group action-icon edit-icon" title="Edit">
                    <i class="fas fa-edit"></i>
                    <div class="tooltip hidden absolute bottom-full mb-2 w-max text-sm bg-gray-800 text-white p-2 rounded-lg opacity-0 transition-opacity duration-300 group-hover:opacity-100 group-hover:block">
                      Edit
                      <div class="tooltip-arrow"></div>
                    </div>
                  </a>
                  <a href="/admin/viewProduct/<%= product._id %>" class="relative group action-icon view-icon" title="View">
                    <i class="fas fa-eye"></i>
                    <div class="tooltip hidden absolute bottom-full mb-2 w-max text-sm bg-gray-800 text-white p-2 rounded-lg opacity-0 transition-opacity duration-300 group-hover:opacity-100 group-hover:block">
                      View
                      <div class="tooltip-arrow"></div>
                    </div>
                  </a>
                  <a href="/admin/deleteProduct/<%= product._id %>" class="relative group action-icon delete-icon" title="Delete">
                    <i class="fas fa-trash"></i>
                    <!-- Tooltip -->
                    <div class="tooltip hidden absolute bottom-full mb-2 w-max text-sm bg-gray-800 text-white p-2 rounded-lg opacity-0 transition-opacity duration-300 group-hover:opacity-100 group-hover:block">
                      Delete
                      <div class="tooltip-arrow"></div>
                    </div>
                  </a>
                </div>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <div class="flex justify-between items-center mt-4 fade-in-up" style="animation-delay: 0.6s;">
        <div class="flex space-x-2">
          <a href="?page=<%= currentPage-1 %>&search=<%= searchTerm %>" class="pagination-button px-3 py-1 bg-gray-200 dark:bg-gray-600 text-gray-600 dark:text-gray-200 rounded-md hover:bg-gray-300 dark:hover:bg-gray-500 transition-colors duration-300">Previous</a>

          <% for( let i = 0; i < totalPages; i++ ) { %>
          <a href="?page=<%= i+1 %>&search=<%= searchTerm %>" class="pagination-button px-3 py-1 
               <%= currentPage == i+1 ? 'bg-blue-500 text-white' : 'bg-gray-100 text-black hover:text-white' %> 
                rounded-md hover:bg-blue-600 transition-colors duration-300">
            <%= i+1 %>
          </a>
          <% } %>


          <a href="?page=<%= currentPage+1 %>&search=<%= searchTerm %>" class="pagination-button px-3 py-1 bg-gray-200 dark:bg-gray-600 text-gray-600 dark:text-gray-200 rounded-md hover:bg-gray-300 dark:hover:bg-gray-500 transition-colors duration-300">Next</a>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", function() {
      // Fade-in animation
      const fadeElements = document.querySelectorAll('.fade-in-up');
      fadeElements.forEach((el, index) => {
        el.style.opacity = "0";
        setTimeout(() => {
          el.style.animation = `fadeInUp 0.5s ease-out ${index * 0.1}s forwards`;
        }, 100);
      });

      // Theme toggle functionality
      const themeToggle = document.getElementById('themeToggle');
      const html = document.documentElement;

      themeToggle.addEventListener('click', () => {
        html.classList.toggle('dark');
        localStorage.setItem('theme', html.classList.contains('dark') ? 'dark' : 'light');
      });

      // Check for saved theme preference or prefer-color-scheme
      const savedTheme = localStorage.getItem('theme');
      const prefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;

      if (savedTheme === 'dark' || (!savedTheme && prefersDark)) {
        html.classList.add('dark');
      }

      // Auto-hide messages after 5 seconds
      const messages = document.querySelectorAll('.message');
      messages.forEach(message => {
        setTimeout(() => {
          message.style.display = 'none';
        }, 5000);
      });
    });
  </script>
</body>

</html>