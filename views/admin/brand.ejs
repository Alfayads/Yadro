<!DOCTYPE html>
<html lang="en" class="light">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Brands - Yadro</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <script>
    tailwind.config = {
      darkMode: 'class',
      theme: {
        extend: {
          colors: {
            primary: {
              light: '#3B82F6',
              dark: '#60A5FA',
            }
          }
        }
      }
    }
  </script>
  <style>
    /* Toggle button styles */
    .toggle-checkbox:checked {
      right: 0;
      border-color: #68D391;
    }

    .toggle-checkbox:checked+.toggle-label {
      background-color: #68D391;
    }

    /* Dark mode toggle styles */
    .theme-toggle {
      width: 48px;
      height: 24px;
      background-color: #e2e8f0;
      border-radius: 9999px;
      position: relative;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    .theme-toggle::after {
      content: '';
      position: absolute;
      top: 2px;
      left: 2px;
      width: 20px;
      height: 20px;
      background-color: white;
      border-radius: 50%;
      transition: transform 0.3s;
    }

    .dark .theme-toggle {
      background-color: #4b5563;
    }

    .dark .theme-toggle::after {
      transform: translateX(24px);
    }
  </style>
</head>

<body class="bg-gray-100 font-sans dark:bg-gray-800 transition-colors duration-200">
  <div class="flex">
    <!-- Sidebar -->
    <%- include('../layouts/admin-sidebar.ejs') %>

    <!-- Main Content -->
    <main class="flex-1 p-8 ml-64">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold dark:text-white">All Brands</h2>
        <div class="flex items-center">
          <div class="theme-toggle mr-4" id="themeToggle" title="Toggle dark mode"></div>
          <a href="/admin/add-brand" class="add-product-btn px-4 py-2 bg-green-600 text-white rounded-lg relative overflow-hidden button">
            <span class="relative z-10">Add Brand</span>
          </a>
        </div>
      </div>

      <!-- Search Bar -->
      <div class="mb-6">
        <div class="relative">
          <input type="text" placeholder="Search Brands" class="w-full p-2 pl-10 pr-4 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
          <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
        </div>
      </div>

      <!-- Brands Table -->
      <div class="bg-white dark:bg-gray-700 shadow-md rounded-lg overflow-hidden">
        <table class="w-full">
          <thead class="bg-gray-50 dark:bg-gray-600 border-b border-gray-200 dark:border-gray-500">
