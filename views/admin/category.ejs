<!DOCTYPE html>
<html lang="en" class="light">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Yadro - Categories</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <script src="/js/toggle.js"></script>
  <link rel="stylesheet" href="/css/category.css">
  <link rel="stylesheet" href="/css/products.css">
</head>

<body class="bg-gray-100 font-sans transition-all duration-300 dark:bg-gray-800">

  <div class="flex">
    <!-- Sidebar (assumed to be included) -->
    <%- include('../layouts/admin-sidebar.ejs') %>

    <!-- Main Content -->
    <div class="flex-1 ml-64 p-6">


      <% if (success_msg.length > 0) { %>
      <div id="successMessage" class="message bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-6" role="alert">
        <strong class="font-bold">Success!</strong>
        <span class="block sm:inline"><%= success_msg %></span>
      </div>
      <% } %>

      <% if (error_msg.length > 0) { %>
      <div id="errorMessage" class="message bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-6" role="alert">
        <strong class="font-bold">Error!</strong>
        <span class="block sm:inline"><%= error_msg %></span>
      </div>
      <% } %>




      <div class="flex items-center justify-between mb-6">
        <h1 class="text-3xl font-bold text-gray-800 dark:text-white fade-in-up">All Categories</h1>
        <div class="flex items-center space-x-4">
          <div class="theme-toggle" id="themeToggle"></div>
          <a href="/admin/add-category" class="add-category-btn px-4 py-2 bg-green-600 text-white rounded-lg relative overflow-hidden button">
            <span class="relative z-10">Add Category</span>
          </a>
        </div>
      </div>

      <!-- Search -->
      <div class="flex justify-between mb-4 fade-in-up" style="animation-delay: 0.2s;">
        <input type="text" placeholder="Search categories..." class="px-4 py-2 border border-gray-300 rounded-lg w-1/2 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all duration-300 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
      </div>

      <!-- Categories Table -->
      <div class="overflow-x-auto fade-in-up" style="animation-delay: 0.4s;">
        <table class="min-w-full bg-white dark:bg-gray-700 border border-gray-200 dark:border-gray-600 shadow-md rounded-lg overflow-hidden">
          <thead>
            <tr class="bg-gray-50 dark:bg-gray-600 text-gray-600 dark:text-gray-200 uppercase text-sm leading-normal">
              <th class="py-3 px-6 text-left">Name</th>
              <th class="py-3 px-6 text-left">Description</th>
              <th class="py-3 px-6 text-left">Offer Price</th>
              <th class="py-3 px-6 text-left">Offer</th>
              <th class="py-3 px-6 text-left">Status</th>
              <th class="py-3 px-6 text-left">Action</th>
            </tr>
          </thead>
          <tbody class="text-gray-600 dark:text-gray-200">

            <% categories.forEach( category => { %>

            <tr class="table-row border-b border-gray-200 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
              <td class="py-3 px-6"><%= category.name %></td>
              <td class="py-3 px-6"><%= category.description %></td>
              <td class="py-3 px-6">$99.99</td>
              <td class="py-3 px-6">
                <button class="px-3 py-1 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition-colors duration-300">Add Offer</button>
              </td>
              <td class="py-3 px-6">
                <label class="toggle-switch">
                  <input type="checkbox" checked>
                  <span class="toggle-slider"></span>
                </label>
              </td>
              <td>
                <div class="flex space-x-3">
                  <a href="/admin/edit-category/<%= category._id %>" class="relative group action-icon edit-icon" title="Edit">
                    <i class="fas fa-edit"></i>
                    <div class="tooltip hidden absolute bottom-full mb-2 w-max text-sm bg-gray-800 text-white p-2 rounded-lg opacity-0 transition-opacity duration-300 group-hover:opacity-100 group-hover:block">
                      Edit
                      <div class="tooltip-arrow"></div>
                    </div>
                  </a>
                  <a href="/admin/viewCategory/<%= category._id %>" class="relative group action-icon view-icon" title="View">
                    <i class="fas fa-eye"></i>
                    <div class="tooltip hidden absolute bottom-full mb-2 w-max text-sm bg-gray-800 text-white p-2 rounded-lg opacity-0 transition-opacity duration-300 group-hover:opacity-100 group-hover:block">
                      View
                      <div class="tooltip-arrow"></div>
                    </div>
                  </a>
                  <a href="/admin/delete-category/<%= category._id %>" class="relative group action-icon delete-icon" title="Delete">
                    <i class="fas fa-trash"></i>
                    <!-- Tooltip -->
                    <div class="tooltip hidden absolute bottom-full mb-2 w-max text-sm bg-gray-800 text-white p-2 rounded-lg opacity-0 transition-opacity duration-300 group-hover:opacity-100 group-hover:block">
                      Delete
                      <div class="tooltip-arrow"></div>
                    </div>
                  </a>
                </div>
              </td>
            </tr>

            <% }) %>

            <!-- Add more rows as needed -->
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <div class="flex justify-between items-center mt-4 fade-in-up" style="animation-delay: 0.6s;">
        <span class="text-gray-600 dark:text-gray-300">Showing 1-10 of 50 categories</span>
        <div class="flex space-x-2">
          <button class="pagination-button px-3 py-1 bg-gray-200 dark:bg-gray-600 text-gray-600 dark:text-gray-200 rounded-md hover:bg-gray-300 dark:hover:bg-gray-500 transition-colors duration-300">Previous</button>
          <button class="pagination-button px-3 py-1 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition-colors duration-300">1</button>
          <button class="pagination-button px-3 py-1 bg-gray-200 dark:bg-gray-600 text-gray-600 dark:text-gray-200 rounded-md hover:bg-gray-300 dark:hover:bg-gray-500 transition-colors duration-300">2</button>
          <button class="pagination-button px-3 py-1 bg-gray-200 dark:bg-gray-600 text-gray-600 dark:text-gray-200 rounded-md hover:bg-gray-300 dark:hover:bg-gray-500 transition-colors duration-300">Next</button>
        </div>
      </div>
    </div>
  </div>

  <script src="/js/category.js"></script>
</body>

</html>