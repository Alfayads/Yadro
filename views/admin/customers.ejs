<!DOCTYPE html>
<html lang="en" class="light">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Yadro - Customers</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <script>
    tailwind.config = {
      darkMode: 'class',
      theme: {
        extend: {
          colors: {
            primary: {
              light: '#3B82F6',
              dark: '#60A5FA',
            }
          }
        }
      }
    }
  </script>
  <style>
    /* Custom CSS for animations and improved styles */
    .button {
      transition: all 0.3s ease;
    }

    .button:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    }

    .pagination-button {
      transition: all 0.2s ease;
    }

    .pagination-button:hover {
      transform: scale(1.05);
    }

    .table-row {
      transition: all 0.2s ease;
    }

    .table-row:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    }

    /* Theme Toggle */
    .theme-toggle {
      width: 50px;
      height: 25px;
      background-color: #e5e7eb;
      border-radius: 15px;
      position: relative;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .theme-toggle::after {
      content: '';
      position: absolute;
      width: 21px;
      height: 21px;
      border-radius: 50%;
      background-color: white;
      top: 2px;
      left: 2px;
      transition: transform 0.3s ease;
    }

    .dark .theme-toggle {
      background-color: #4B5563;
    }

    .dark .theme-toggle::after {
      transform: translateX(25px);
    }

    /* Add Customer Button */
    .add-customer-btn {
      transition: all 0.3s ease;
      overflow: hidden;
    }

    .add-customer-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    }

    .add-customer-btn::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(120deg,
          transparent,
          rgba(255, 255, 255, 0.3),
          transparent);
      transition: all 0.6s;
    }

    .add-customer-btn:hover::before {
      left: 100%;
    }

    .action-icon {
      font-size: 1.25rem;
      width: 2rem;
      height: 2rem;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      border-radius: 50%;
      transition: all 0.3s ease;
    }

    .action-icon:hover {
      transform: scale(1.1);
    }

    .edit-icon {
      color: #3B82F6;
      background-color: rgba(59, 130, 246, 0.1);
    }

    .view-icon {
      color: #10B981;
      background-color: rgba(16, 185, 129, 0.1);
    }

    .delete-icon {
      color: #EF4444;
      background-color: rgba(239, 68, 68, 0.1);
    }

    /* Animations */
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }

      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .fade-in-up {
      animation: fadeInUp 0.5s ease-out forwards;
    }
  </style>
</head>

<body class="bg-gray-100 font-sans transition-all duration-300 dark:bg-gray-800">

  <div class="flex">
    <!-- Sidebar -->
    <%- include('../layouts/admin-sidebar.ejs') %>

    <!-- Main Content -->
    <div class="flex-1 ml-64 p-6">
      <div class="flex items-center justify-between mb-6">
        <h1 class="text-3xl font-bold text-gray-800 dark:text-white fade-in-up">Customers</h1>
        <div class="flex items-center space-x-4">
          <div class="theme-toggle" id="themeToggle"></div>
          <a href="#" class="add-customer-btn px-4 py-2 bg-green-600 text-white rounded-lg relative overflow-hidden button">
            <span class="relative z-10">Add Customer</span>
          </a>
        </div>
      </div>

      <!-- Search and Filter -->
      <div class="flex justify-between mb-4 fade-in-up" style="animation-delay: 0.2s;">
        <input type="text" placeholder="Search customers..." class="px-4 py-2 border border-gray-300 rounded-lg w-1/2 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all duration-300 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
        <select class="px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all duration-300 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
          <option>All Status</option>
          <option>Active</option>
          <option>Blocked</option>
        </select>
      </div>

      <!-- Customers Table -->
      <div class="overflow-x-auto fade-in-up" style="animation-delay: 0.4s;">
        <table class="min-w-full bg-white dark:bg-gray-700 border border-gray-200 dark:border-gray-600 shadow-md rounded-lg overflow-hidden">
          <thead>
            <tr class="bg-gray-50 dark:bg-gray-600 text-gray-600 dark:text-gray-200 uppercase text-sm leading-normal">
              <th class="py-3 px-6 text-left">Sl No</th>
              <th class="py-3 px-6 text-left">Customer Name</th>
              <th class="py-3 px-6 text-left">Email</th>
              <th class="py-3 px-6 text-left">Phone No</th>
              <th class="py-3 px-6 text-left">Address</th>
              <th class="py-3 px-6 text-left">Status</th>
              <th class="py-3 px-6 text-left">Added</th>
              <th class="py-3 px-6 text-left">Action</th>
            </tr>
          </thead>
          <tbody class="text-gray-600 dark:text-gray-200">
            <tr class="table-row border-b border-gray-200 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
              <td class="py-3 px-6">1</td>
              <td class="py-3 px-6">Customer Name</td>
              <td class="py-3 px-6">email@example.com</td>
              <td class="py-3 px-6">1234567890</td>
              <td class="py-3 px-6">Address</td>
              <td class="py-3 px-6"><span class="bg-green-200 text-green-600 py-1 px-3 rounded-full text-xs">Active</span></td>
              <td class="py-3 px-6">24 Jun 2023</td>
              <td class="py-3 px-6">
                <div class="flex space-x-3">
                  <button class="action-icon edit-icon" title="Edit"><i class="fas fa-edit"></i></button>
                  <button class="action-icon view-icon" title="View"><i class="fas fa-eye"></i></button>
                  <button class="action-icon delete-icon" title="Delete"><i class="fas fa-trash"></i></button>
                </div>
              </td>
            </tr>
            <!-- Add more rows as needed -->
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <div class="flex justify-between items-center mt-4 fade-in-up" style="animation-delay: 0.6s;">
        <span class="text-gray-600 dark:text-gray-300">Showing 1-10 of 50 customers</span>
        <div class="flex space-x-2">
          <button class="pagination-button px-3 py-1 bg-gray-200 dark:bg-gray-600 text-gray-600 dark:text-gray-200 rounded-md hover:bg-gray-300 dark:hover:bg-gray-500 transition-colors duration-300">Previous</button>
          <button class="pagination-button px-3 py-1 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition-colors duration-300">1</button>
          <button class="pagination-button px-3 py-1 bg-gray-200 dark:bg-gray-600 text-gray-600 dark:text-gray-200 rounded-md hover:bg-gray-300 dark:hover:bg-gray-500 transition-colors duration-300">2</button>
          <button class="pagination-button px-3 py-1 bg-gray-200 dark:bg-gray-600 text-gray-600 dark:text-gray-200 rounded-md hover:bg-gray-300 dark:hover:bg-gray-500 transition-colors duration-300">3</button>
          <button class="pagination-button px-3 py-1 bg-gray-200 dark:bg-gray-600 text-gray-600 dark:text-gray-200 rounded-md hover:bg-gray-300 dark:hover:bg-gray-500 transition-colors duration-300">Next</button>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", function() {
      // Fade-in animation
      const fadeElements = document.querySelectorAll('.fade-in-up');
      fadeElements.forEach((el, index) => {
        el.style.opacity = "0";
        setTimeout(() => {
          el.style.animation = `fadeInUp 0.5s ease-out ${index * 0.1}s forwards`;
        }, 100);
      });

      // Theme toggle functionality
      const themeToggle = document.getElementById('themeToggle');
      const html = document.documentElement;

      themeToggle.addEventListener('click', () => {
        html.classList.toggle('dark');
        localStorage.setItem('theme', html.classList.contains('dark') ? 'dark' : 'light');
      });

      // Check for saved theme preference or prefer-color-scheme
      const savedTheme = localStorage.getItem('theme');
      const prefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;

      if (savedTheme === 'dark' || (!savedTheme && prefersDark)) {
        html.classList.add('dark');
      }
    });
  </script>
</body>

</html>