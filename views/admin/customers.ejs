<!DOCTYPE html>
<html lang="en" class="light">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Yadro - Customers</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/css/admin-customer.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <script src="/js/toggle.js"></script>
</head>

<body class="bg-gray-100 font-sans transition-all duration-300 dark:bg-gray-800">

  <div class="flex">
    <!-- Sidebar -->
    <%- include('../layouts/admin-sidebar.ejs') %>

    <!-- Main Content -->
    <div class="flex-1 ml-64 p-6">
      <% if (success_msg.length > 0) { %>
      <div id="successMessage" class="message bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-6" role="alert">
        <strong class="font-bold">Success!</strong>
        <span class="block sm:inline"><%= success_msg %></span>
      </div>
      <% } %>

      <% if (error_msg.length > 0) { %>
      <div id="errorMessage" class="message bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-6" role="alert">
        <strong class="font-bold">Error!</strong>
        <span class="block sm:inline"><%= error_msg %></span>
      </div>
      <% } %>

      <div class="flex items-center justify-between mb-6">
        <h1 class="text-3xl font-bold text-gray-800 dark:text-white fade-in-up">Customers</h1>
        <div class="flex items-center space-x-4">
          <div class="theme-toggle" id="themeToggle"></div>
          </a>
        </div>
      </div>

      <!-- Search and Filter -->
      <form action="/admin/customers" method="GET" class="mb-8 fade-in-up" style="animation-delay: 0.2s;">
        <div class="search-container flex items-center justify-between">
          <i class="fas fa-search search-icon ml-4"></i>
          <input type="text" name="search" placeholder="Search customers..." class="search-input" />
          <select name="status" class="search-select mr-5">
            <option value="">All Status</option>
            <option value="active">Active</option>
            <option value="blocked">Blocked</option>
          </select>
          <button type="submit" class="search-button">
            Search
          </button>
        </div>
      </form>

      <!-- Customers Table -->
      <div class="overflow-x-auto fade-in-up" style="animation-delay: 0.4s;">
        <table class="min-w-full bg-white dark:bg-gray-700 border border-gray-200 dark:border-gray-600 shadow-md rounded-lg overflow-hidden">
          <thead>
            <tr class="bg-gray-50 dark:bg-gray-600 text-gray-600 dark:text-gray-200 uppercase text-sm leading-normal">
              <th class="py-3 px-6 text-left">Sl No</th>
              <th class="py-3 px-6 text-left">Customer Name</th>
              <th class="py-3 px-6 text-left">Email</th>
              <th class="py-3 px-6 text-left">Phone No</th>
              <th class="py-3 px-6 text-left">Address</th>
              <th class="py-3 px-6 text-left">Status</th>
              <th class="py-3 px-6 text-left">Added</th>
              <th class="py-3 px-6 text-left">Action</th>
            </tr>
          </thead>
          <tbody class="text-gray-600 dark:text-gray-200">

            <% data.forEach( (customer,index) => { %>


            <tr class="table-row border-b border-gray-200 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
              <td class="py-3 px-6"><%= index+1 %></td>
              <td class="py-3 px-6"><%= customer.fname + ' ' + customer.lname %></td>
              <td class="py-3 px-6"><%= customer.email %></td>
              <td class="py-3 px-6"><%= customer.phone %></td>
              <td class="py-3 px-6">Address</td>
              <% if (customer.isBlocked === false) { %>
              <td class="py-3 px-6"><span class="bg-green-200 text-green-600 py-1 px-3 rounded-full text-xs">Active</span></td>
              <% } else { %>
              <td class="py-3 px-6"><span class="bg-red-200 text-red-600 py-1 px-3 rounded-full text-xs">Blocked</span></td>
              <% } %>
              <td class="py-3 px-6"><%= customer.createdOn %></td>
              <td class="py-3 px-6">
                <div class="flex space-x-3">

                  <!-- Block Button with Tooltip -->
                  <% if (customer.isBlocked === false) { %>
                  <a href="/admin/blockCustomer?id=<%= customer._id %>" class="relative group action-icon block-icon" title="Block">
                    <i class="fa-solid fa-lock-open"></i>
                    <!-- Tooltip -->
                    <div class="tooltip hidden absolute bottom-full mb-2 w-max text-sm bg-gray-800 text-white p-2 rounded-lg opacity-0 transition-opacity duration-300 group-hover:opacity-100 group-hover:block">
                      Block
                      <div class="tooltip-arrow"></div>
                    </div>
                  </a>
                  <% } else { %>
                  <a href="/admin/unblockCustomer?id=<%= customer._id %>" class="relative group action-icon block-icon" title="Block">
                    <i class="fa-solid fa-lock"></i>
                    <!-- Tooltip -->
                    <div class="tooltip hidden absolute bottom-full mb-2 w-max text-sm bg-gray-800 text-white p-2 rounded-lg opacity-0 transition-opacity duration-300 group-hover:opacity-100 group-hover:block">
                      Unblock
                      <div class="tooltip-arrow"></div>
                    </div>
                  </a>
                  <% } %>

                  <!-- Delete Button with Tooltip -->
                  <a href="/admin/deleteCustomer?id=<%= customer._id %>" class="relative group action-icon delete-icon" title="Delete">
                    <i class="fas fa-trash"></i>
                    <!-- Tooltip -->
                    <div class="tooltip hidden absolute bottom-full mb-2 w-max text-sm bg-gray-800 text-white p-2 rounded-lg opacity-0 transition-opacity duration-300 group-hover:opacity-100 group-hover:block">
                      Delete
                      <div class="tooltip-arrow"></div>
                    </div>
                  </a>
                </div>
              </td>
            </tr>


            <% })%>
            <!-- Add more rows as needed -->
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <div class="flex justify-between items-center mt-4 fade-in-up" style="animation-delay: 0.6s;">
        <div class="flex space-x-2">
          <a href="?page=<%= currentPage-1 %>&search=<%= searchTerm %>" class="pagination-button px-3 py-1 bg-gray-200 dark:bg-gray-600 text-gray-600 dark:text-gray-200 rounded-md hover:bg-gray-300 dark:hover:bg-gray-500 transition-colors duration-300">Previous</a>

          <% for( let i = 0; i < totalPages; i++ ) { %>
          <a href="?page=<%= i+1 %>&search=<%= searchTerm %>" class="pagination-button px-3 py-1 
               <%= currentPage == i+1 ? 'bg-blue-500 text-white' : 'bg-gray-100 text-black hover:text-white' %> 
                rounded-md hover:bg-blue-600 transition-colors duration-300">
            <%= i+1 %>
          </a>
          <% } %>


          <a href="?page=<%= currentPage+1 %>&search=<%= searchTerm %>" class="pagination-button px-3 py-1 bg-gray-200 dark:bg-gray-600 text-gray-600 dark:text-gray-200 rounded-md hover:bg-gray-300 dark:hover:bg-gray-500 transition-colors duration-300">Next</a>
        </div>
      </div>
    </div>
  </div>

  <script src="/js/admin-customer.js"></script>
</body>

</html>