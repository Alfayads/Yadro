<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Yadro - Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <link rel="stylesheet" href="/css/admin-home.css">
  <script src="/js/toggle.js"></script>
</head>

<body class="bg-gray-100 font-sans transition-bg dark:bg-gray-800">
  <div class="flex">
    <!-- Sidebar -->
    <%- include('../layouts/admin-sidebar.ejs') %>

    <!-- Main Content -->
    <div class="flex-1 ml-64 p-10">
      <div class="flex justify-between items-center mb-8">
        <h1 class="text-3xl font-bold dark:text-white">Dashboard Overview</h1>
        <div class="theme-toggle" id="themeToggle"></div>
      </div>

      <!-- Metrics Cards Section -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <!-- Total Orders Card -->
        <div class="bg-white dark:bg-gray-700 rounded-lg p-6 shadow-lg hover:shadow-xl transition-shadow duration-300">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Total Orders</p>
              <p class="text-3xl font-bold text-gray-700 dark:text-white">1200</p>
            </div>
            <div class="p-3 bg-blue-500 rounded-full flex items-center justify-center relative w-12 h-12">
              <i class="fas fa-shopping-cart text-white w-8 h-8 absolute top-4 left-4"></i>
            </div>
          </div>
        </div>

        <!-- Total Sales Card -->
        <div class="bg-white dark:bg-gray-700 rounded-lg p-6 shadow-lg hover:shadow-xl transition-shadow duration-300">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Total Sales</p>
              <p class="text-3xl font-bold text-gray-700 dark:text-white">₹2,50,000</p>
            </div>
            <div class="p-3 bg-green-500 rounded-full flex items-center justify-center  relative w-12 h-12">
              <i class="fas fa-money-bill-wave text-white w-8 h-8 absolute top-4 left-4"></i>
            </div>
          </div>
        </div>

        <!-- Total Products Card -->
        <div class="bg-white dark:bg-gray-700 rounded-lg p-6 shadow-lg hover:shadow-xl transition-shadow duration-300">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Total Products</p>
              <p class="text-3xl font-bold text-gray-700 dark:text-white">350</p>
            </div>
            <div class="p-3 bg-yellow-500 rounded-full flex items-center justify-center  relative w-12 h-12">
              <i class="fas fa-box text-white w-8 h-8 absolute top-4 left-4"></i>
            </div>
          </div>
        </div>

        <!-- Monthly Earnings Card -->
        <div class="bg-white dark:bg-gray-700 rounded-lg p-6 shadow-lg hover:shadow-xl transition-shadow duration-300">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Monthly Earnings</p>
              <p class="text-3xl font-bold text-gray-700 dark:text-white">₹50,000</p>
            </div>
            <div class="p-3 bg-purple-500 rounded-full flex items-center justify-center  relative w-12 h-12">
              <i class="fas fa-chart-line text-white w-8 h-8 absolute top-4 left-4"></i>
            </div>
          </div>
        </div>

        <!-- Users Count Card -->
        <div class="bg-white dark:bg-gray-700 rounded-lg p-6 shadow-lg hover:shadow-xl transition-shadow duration-300">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-500 dark:text-gray-400">No. of Users</p>
              <p class="text-3xl font-bold text-gray-700 dark:text-white">850</p>
            </div>
            <div class="p-3 bg-pink-500 rounded-full flex items-center justify-center  relative w-12 h-12">
              <i class="fas fa-users text-white w-8 h-8 absolute top-4 left-4"></i>
            </div>
          </div>
        </div>

        <!-- Pending Orders Card -->
        <div class="bg-white dark:bg-gray-700 rounded-lg p-6 shadow-lg hover:shadow-xl transition-shadow duration-300">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Pending Orders</p>
              <p class="text-3xl font-bold text-gray-700 dark:text-white">15</p>
            </div>
            <div class="p-3 bg-red-500 rounded-full flex items-center justify-center  relative w-12 h-12">
              <i class="fas fa-exclamation-circle text-white w-8 h-8 absolute top-4 left-4"></i>
            </div>
          </div>
        </div>

        <!-- Completed Orders Card -->
        <div class="bg-white dark:bg-gray-700 rounded-lg p-6 shadow-lg hover:shadow-xl transition-shadow duration-300">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Completed Orders</p>
              <p class="text-3xl font-bold text-gray-700 dark:text-white">1185</p>
            </div>
            <div class="p-3 bg-green-500 rounded-full flex items-center justify-center  relative w-12 h-12">
              <i class="fas fa-check-circle text-white w-8 h-8 absolute top-4 left-4"></i>
            </div>
          </div>
        </div>

        <!-- Total Discount Card -->
        <div class="bg-white dark:bg-gray-700 rounded-lg p-6 shadow-lg hover:shadow-xl transition-shadow duration-300">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Total Discount</p>
              <p class="text-3xl font-bold text-gray-700 dark:text-white">₹10,000</p>
            </div>
            <div class="p-3 bg-indigo-500 rounded-full flex items-center justify-center  relative w-12 h-12">
              <i class="fas fa-tags text-white w-8 h-8 absolute top-4 left-4"></i>
            </div>
          </div>
        </div>
      </div>

      <!-- Sales Statistics (Bar) & Order Statistics (Pie) -->
      <div class="flex flex-col md:flex-row gap-6 mb-8">
        <!-- Sales Statistics (Bar Chart) -->
        <div class="bg-white dark:bg-gray-700 rounded-lg shadow-lg p-6 flex-1">
          <h2 class="text-xl font-bold text-gray-700 dark:text-white mb-4">Sales Statistics</h2>
          <canvas id="salesChart" class="w-full"></canvas>
        </div>

        <!-- Order Statistics (Pie Chart) -->
        <div class="bg-white dark:bg-gray-700 rounded-lg shadow-lg p-6 flex-1">
          <h2 class="text-xl font-bold text-gray-700 dark:text-white mb-4">Order Statistics</h2>
          <canvas id="orderChart" class="w-full"></canvas>
        </div>
      </div>

      <!-- Top Selling Products Table -->
      <div class="bg-white dark:bg-gray-700 rounded-lg shadow-lg p-6 mb-8">
        <h2 class="text-xl font-bold text-gray-700 dark:text-white mb-4">Top Selling Products</h2>
        <table class="w-full table-auto text-left">
          <thead>
            <tr class="bg-gray-100 dark:bg-gray-600">
              <th class="px-4 py-2 text-gray-600 dark:text-gray-200">Product Name</th>
              <th class="px-4 py-2 text-gray-600 dark:text-gray-200">Units Sold</th>
              <th class="px-4 py-2 text-gray-600 dark:text-gray-200">Total Revenue</th>
            </tr>
          </thead>
          <tbody>
            <tr class="border-b dark:border-gray-600">
              <td class="px-4 py-2 text-gray-700 dark:text-gray-200">Product A</td>
              <td class="px-4 py-2 text-gray-700 dark:text-gray-200">200</td>
              <td class="px-4 py-2 text-gray-700 dark:text-gray-200">₹40,000</td>
            </tr>
            <tr class="border-b dark:border-gray-600">
              <td class="px-4 py-2 text-gray-700 dark:text-gray-200">Product B</td>
              <td class="px-4 py-2 text-gray-700 dark:text-gray-200">150</td>
              <td class="px-4 py-2 text-gray-700 dark:text-gray-200">₹30,000</td>
            </tr>
            <tr class="border-b dark:border-gray-600">
              <td class="px-4 py-2 text-gray-700 dark:text-gray-200">Product C</td>
              <td class="px-4 py-2 text-gray-700 dark:text-gray-200">100</td>
              <td class="px-4 py-2 text-gray-700 dark:text-gray-200">₹20,000</td>
            </tr>
          </tbody>
        </table>
      </div>

      <!-- Recent Orders Table -->
      <div class="bg-white dark:bg-gray-700 rounded-lg shadow-lg p-6 mb-8">
        <h2 class="text-xl font-bold text-gray-700 dark:text-white mb-4">Recent Orders</h2>
        <table class="w-full table-auto text-left">
          <thead>
            <tr class="bg-gray-100 dark:bg-gray-600">
              <th class="px-4 py-2 text-gray-600 dark:text-gray-200">Order ID</th>
              <th class="px-4 py-2 text-gray-600 dark:text-gray-200">Customer</th>
              <th class="px-4 py-2 text-gray-600 dark:text-gray-200">Amount</th>
              <th class="px-4 py-2 text-gray-600 dark:text-gray-200">Date</th>
              <th class="px-4 py-2 text-gray-600 dark:text-gray-200">Status</th>
            </tr>
          </thead>
          <tbody>
            <tr class="border-b dark:border-gray-600">
              <td class="px-4 py-2 text-gray-700 dark:text-gray-200">ORD-101</td>
              <td class="px-4 py-2 text-gray-700 dark:text-gray-200">John Doe</td>
              <td class="px-4 py-2 text-gray-700 dark:text-gray-200">₹2,500</td>
              <td class="px-4 py-2 text-gray-700 dark:text-gray-200">2023-09-20</td>
              <td class="px-4 py-2 text-gray-700 dark:text-gray-200">Pending</td>
            </tr>
            <tr class="border-b dark:border-gray-600">
              <td class="px-4 py-2 text-gray-700 dark:text-gray-200">ORD-102</td>
              <td class="px-4 py-2 text-gray-700 dark:text-gray-200">Jane Smith</td>
              <td class="px-4 py-2 text-gray-700 dark:text-gray-200">₹3,200</td>
              <td class="px-4 py-2 text-gray-700 dark:text-gray-200">2023-09-21</td>
              <td class="px-4 py-2 text-gray-700 dark:text-gray-200">Completed</td>
            </tr>
            <tr class="border-b dark:border-gray-600">
              <td class="px-4 py-2 text-gray-700 dark:text-gray-200">ORD-103</td>
              <td class="px-4 py-2 text-gray-700 dark:text-gray-200">Alice Brown</td>
              <td class="px-4 py-2 text-gray-700 dark:text-gray-200">₹1,800</td>
              <td class="px-4 py-2 text-gray-700 dark:text-gray-200">2023-09-22</td>
              <td class="px-4 py-2 text-gray-700 dark:text-gray-200">Pending</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <script src="/js/admin-home.js"></script>
</body>

</html>