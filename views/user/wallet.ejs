                <% if(wallet.transactions.length > 0) { %>

                <% wallet.transactions.forEach((transaction, index) => { %>
                <tr class="transaction-row border-t border-gray-100" style="animation-delay: <%= index * 50 %>ms">
                  <td class="py-4 px-6">
                    <div class="flex items-center">
                      <div class="w-8 h-8 rounded-full flex items-center justify-center <%= transaction.type === 'credit' ? 'bg-green-100 text-green-600' : 'bg-red-100 text-red-600' %>">
                        <%= transaction.type === 'credit' ? '↓' : '↑' %>
