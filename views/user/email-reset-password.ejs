<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Reset Password - Yadro</title>
  <link rel="stylesheet" href="/css/home-without-user.css">
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="icon" href="/images/logo.png" type="image/x-icon">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body>
  <!-- Include header here -->
  <%- include('../layouts/header-without-user.ejs') %>
  <main class="flex container justify-between items-center ml-64 p-8">
    <div class="w-1/2">
      <!-- Placeholder for the image -->
      <img width="660" src="/images/otp-verify.png" alt="reset password logo">
    </div>
    <div class="w-1/2">
      <h1 class="text-3xl font-bold mb-4">Reset Password</h1>

      <!-- Error message placeholder -->
      <div id="error-message" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-6" role="alert" style="display: none;">
        <strong class="font-bold">Error!</strong>
        <span class="block sm:inline" id="error-text"></span>
        <span class="absolute top-0 bottom-0 right-0 px-4 py-3">
          <svg class="fill-current h-6 w-6 text-red-500" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" onclick="document.getElementById('error-message').style.display='none'">
            <title>Close</title>
            <path d="M14.348 5.652a1 1 0 00-1.414-1.414L10 7.172 7.066 4.238a1 1 0 10-1.414 1.414L8.586 10l-2.934 2.934a1 1 0 101.414 1.414L10 12.828l2.934 2.934a1 1 0 101.414-1.414L11.414 10l2.934-2.934z" />
          </svg>
        </span>
      </div>

      <form>
        <input id="email" name="email" type="email" placeholder="Enter your email address..." class="w-full p-2 mb-4 border rounded" required>
        <button class="w-full bg-red-500 text-white py-2 rounded" type="submit">Send Reset Link</button>
      </form>
    </div>
  </main>

  <%- include('../layouts/footer.ejs') %>
  <!-- Include footer here -->

  <script>
    function sendResetLink() {
      const email = document.getElementById('email').value;
      // Here you would typically send an AJAX request to your server
      // For demonstration, we'll just show a success message
      Swal.fire({
        icon: 'success',
        title: 'Reset Link Sent!',
        text: 'Please check your email for further instructions.',
        showConfirmButton: false,
        timer: 1500
      });
      return false; // Prevent form submission
    }
  </script>
</body>

</html>